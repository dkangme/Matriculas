{% extends 'base.html.twig' %}

{% block body %}
    <h1>Alumno</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ alumno.id }}</td>
            </tr>
            <tr>
                <th>Rut</th>
                <td>{{ alumno.rut }}</td>
            </tr>
            <tr>
                <th>Apeppaterno</th>
                <td>{{ alumno.apepPaterno }}</td>
            </tr>
            <tr>
                <th>Apepmaterno</th>
                <td>{{ alumno.apepMaterno }}</td>
            </tr>
            <tr>
                <th>Nombres</th>
                <td>{{ alumno.nombres }}</td>
            </tr>
            <tr>
                <th>Sexo</th>
                <td>{{ alumno.sexo }}</td>
            </tr>
            <tr>
                <th>Fechanacimiento</th>
                <td>{% if alumno.fechaNacimiento %}{{ alumno.fechaNacimiento|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Nacionalidad</th>
                <td>{{ alumno.nacionalidad }}</td>
            </tr>
            <tr>
                <th>Numeropasaporte</th>
                <td>{{ alumno.numeroPasaporte }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('alumno_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('alumno_edit', { 'id': alumno.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
