{% extends 'base.html.twig' %}

{% block body %}
    
    <div class="container">
        <h1>Listado de Programas</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Codigo</th>
                    <th>Horario</th>
                    <th>Nombre</th>
                    <th>Sede</th>
                    <th>Tipo</th>
                    <th>Duracion</th>
                    <th>Duraciontitulo</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for programa in programas %}
                <tr>
                    <td><a href="{{ path('programa_show', { 'id': programa.id }) }}">{{ programa.id }}</a></td>
                    <td>{{ programa.codigo }}</td>
                    <td>{{ programa.horario }}</td>
                    <td>{{ programa.nombre }}</td>
                    <td>{{ programa.sede }}</td>
                    <td>{{ programa.tipo }}</td>
                    <td>{{ programa.duracion }}</td>
                    <td>{{ programa.duracionTitulo }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('programa_show', { 'id': programa.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('programa_edit', { 'id': programa.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('programa_new') }}">Create a new entry</a>
            </li>
        </ul>
    </div>
{% endblock %}
